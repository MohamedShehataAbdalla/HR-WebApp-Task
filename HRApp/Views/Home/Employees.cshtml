@{
    ViewData["Title"] = "Employees";
    @model Employee
}
<html>
    <head>
        <style>
            .input-validation-error {
                border: 1px solid darkred;
                background-color: #ffcccb;
            }
            .validation-summary-errors {
                color: red;
            }
        </style>
    </head>
    <body>

        <div class="text-center">
            <h2 class="display-4">Add New Employee</h2>
            <form asp-action="Employees" method="post">

                <div asp-validation-summary="All"></div>

                <div>
                    <label asp-for="Id">Employee Id</label>
                    <input type="text" asp-for="Id" />
                </div>
                <div>
                    <label asp-for="Name">Name</label>
                    <input type="text" asp-for="Name" />
                </div>
                <div>
                    <label asp-for="JobTtitle">Job Title</label>
                    <input type="text" asp-for="JobTtitle" />
                </div>
                <div>
                    <label asp-for="Department">Department</label>
                    <select asp-for="Department">
                        <option>---</option>
                        <option value="IT">Information Technology</option>
                        <option value="Dev">Development</option>
                        <option value="Op">Opration</option>
                        <option value="Fin">Finance</option>
                        <option value="Acc">Accounting</option>
                    </select>
                </div>
                <div>
                    <label asp-for="Email">Email Address</label>
                    <input type="email" asp-for="Email" />
                </div>
                <div>
                    <label asp-for="BirthDate">Birth Date</label>
                    <input type="date" asp-for="BirthDate" />
                </div>
                <div>
                    <label asp-for="IsActive">Is Active?</label>
                    <input type="checkbox" asp-for="IsActive" />
                </div>
                <div>
                    <button type="submit">Save</button>
                </div>
            </form>
        </div>
    </body>
</html>
